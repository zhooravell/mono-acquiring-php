{
  "name": "monobank/acquiring",
  "description": "Monobank Acquiring API PHP SDK",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Monobank\\Acquiring\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Monobank\\Acquiring\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require": {
    "php": ">=8.1",
    "ext-filter": "*",
    "ext-hash": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10"
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=PSR12 src/ tests/",
    "analyze": [
      "@phpcs"
    ],
    "ci": [
      "@test",
      "@analyze"
    ]
  }
}
